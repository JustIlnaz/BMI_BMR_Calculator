<Page x:Class="BMI_BMR_Calculator.BMI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BMI_BMR_Calculator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BMI">

    <Grid >
        <StackPanel Background="White">
            <!-- Заголовок -->
            <TextBlock FontSize="24" Text="BMI Calculator" HorizontalAlignment="Center" Margin="10"/>


            <!--Текстовый Блок о информации-->
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock FontSize="17"><Run Text="Информация о том, что такое BMI и  "/><LineBreak/><Run Text="как он работает "/></TextBlock>

            </StackPanel>

            <!-- Выбор пола -->

            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Width="80" Height="80" Margin="10">
                    <StackPanel Orientation="Vertical">
                        <Image Source="image/male-icon.png" Width="30" Height="30" Margin="5" />
                        <TextBlock Text="Мужской" VerticalAlignment="Center" Margin="5 0 0 0" />
                    </StackPanel>
                </Button>

                <Button Width="80" Height="80" Margin="10">
                    <StackPanel Orientation="Vertical">
                        <Image Source="image/male-icon.png" Width="30" Height="30" Margin="5" />
                        <TextBlock Text="Женский" VerticalAlignment="Center" Margin="5 0 0 0" />
                    </StackPanel>
                </Button>

            </StackPanel>


            <!-- Поля ввода -->
            <StackPanel Orientation="Vertical" Margin="10">


                <StackPanel Orientation="Horizontal">

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Рост:" Margin="50,5,5,5"/>
                        <TextBlock Text="Вес:" Margin="50,5,5,5"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <TextBox  Width="50" Margin="0,5,5,5"/>
                        <TextBox Width="50" Margin="0,5,5,5"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="см" Margin="0,5,5,5"/>
                        <TextBlock Text="кг" Margin="0,5,5,5"/>
                    </StackPanel>

                </StackPanel>

            </StackPanel>

            <!-- Кнопки действия -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Content="Рассчитать" Click="CalculateBMI_Click"  Margin="10"/>
                <Button Content="Отмена" Click="Cancel_Click" Margin="10"/>
            </StackPanel>

        </StackPanel>
         
        <!--Вывод-->
        <StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
